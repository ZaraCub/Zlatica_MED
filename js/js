var factPlaceholder = document.getElementById("fun-fact");
var showFact = document.getElementById("pokazi");


var ff = ["Kristalizacija je znak da je med prirodnog podrijetla. Dolazi do izdvajanja kristala glukoze oko kojih se stvaraju kristali meda.",
  "Kristalizacija meda odvija se brže ukoliko u medu ima više glukoze nego fruktoze ili ako med sadrži više od 20% vode.",
  "U Tutankhamonovoj grobnici je pronađen jestivi med star više od 3000 godina što dokazuje činjenicu da, dobro zatvoren i skladišten na tamnom mjestu, ima neograničen rok trajanja.",
  "Nemojte koristiti metalnu žličicu za med jer može doći do reakcije organskih kiselina i metala, pa radije neka bude drvena, porculanska ili plastična.",
  "Iznad temperature od 40 °C med gubi ljekovita svojstva, pa pripazite da ga ne koristite u napitcima koji su prevrući.",
"Pčele imaju savršenu memoriju za vrijeme i prostor, te razlikuju više od 130 različitih mirisa.",
"I bumbari proizvode med, ali u puno manjim količinama od medonosnih pčela tako da se ne koristi za ljudsku upotrebu.",
"Smanjuje mamurluk, pomaže probaviti alkohol u tijelu"]



var factNumber;

function randomFact() {
  return ff[factNumber];
}

showFact.addEventListener('click', function () {
  factNumber = Math.floor(Math.random() * 5);
  factPlaceholder.textContent = randomFact();
});


function myFunction1() {
  var dots1 = document.getElementById("dots1");
  var moreText = document.getElementById("more1");
  var btnText = document.getElementById("myBtn1");

  if (dots1.style.display === "none") {
    dots1.style.display = "inline";
    btnText.innerHTML = "Read more"; 
    moreText.style.display = "none";
  } else {
    dots1.style.display = "none";
    btnText.innerHTML = "Read less"; 
    moreText.style.display = "inline";
  }
}
